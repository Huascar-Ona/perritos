<% if current_user.present? %>

  <h3>Hola <%= current_user.name %></h3>
  
  <div class="col-lg-12">
    <% @tags.each do |tag|  %>
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <%= link_to  tag.name ,{controller: "dogs", action: "new", tagId: tag.id}, class: "btn btn-lg btn-success btn-block" %>
      </div>
    <%end%>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <%= link_to "Quiero ayudar",'#', class: "btn btn-lg btn-info btn-block" %>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="col-lg-12">
    <% @dogs.each do |dog| %>
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= link_to dog.name, dog, class: "btn btn-lg btn-link btn-block" %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <% dog.photos.each do |photoDog| %>
            <% if photoDog.id == dog.avatar_id %>
              <%= image_tag photoDog.image.url(:medium), alt: dog.name, class: 'center-block' %>
            <% end %>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <% dog.tags.each do |tag| %>
            <center>
              <%= content_tag :span, tag.name, class: "label label-default"  %>
            </center>            
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
<% else %>
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<% end %>