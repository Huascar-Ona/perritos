<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h1>
      Tags
      <%= link_to  new_tag_path, class: "btn btn-default", title: "Add new tag" do %>
          <i class="glyphicon glyphicon-plus"></i>
        <% end %>
    </h1>
  </div>
  <div class="col-lg-12">
    <% @tags.each do |tag| %>
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-12">
        <div class="col-xs-6 col-sm-12 col-md-12 col-lg-6">
          <%= link_to tag.name, tag %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4 col-offset-lg-1">
          <div class="btn-group">
            <%= link_to  edit_tag_path(tag), class: "btn btn-default", title: "Edit the tag" do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
            <%= link_to  tag, method: :delete, data: { confirm: 'Do you want to delete the tag ' + tag.name }, class: "btn btn-default", title: "Erase tag" do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          </div>
        </div>
        
      </div>
      <div class="clearfix"></div>
    <% end %>
  </div>
</div>
<br/>