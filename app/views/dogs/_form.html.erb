<%= simple_form_for @dog, :html => {:multipart => true, class: 'form-vertical'}, validate: true do |f| %>
  <% if dog.errors.any? %>
    <div class="row" id="error_explanation">
      <h2><%= pluralize(dog.errors.count, "error") %> prohibited this dog from being saved:</h2>
      <ul>
        <%= dog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="clearfix"></div>
  
  <%= f.input :name, class: 'form-control' %>
  <%= f.input :contact_id, as: :hidden, input_html: { value: @contact_id } %>
  <%= f.input :tag_id, as: :hidden, input_html: { value: @selectedTag} %>
  <%= f.association :race, prompt: "Select the race of the dog" %>
  <%= f.input :image, as: :file %>
  <div class="clearfix"></div>
  <div class="form-group">
    <% if !@dog.new_record? %>
      <div class="col-xs-12 col-sm-12 col-lg-4">
        <% @dog.photos.each do |avatar| %>
          <%= image_tag avatar.image.url(:thumb), alt: @dog.name, class: "img-responsive center-block" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="clearfix"></div>
  <%= f.input :sex %>
  <%= f.input :age %>
  <%= f.input :size, collection: @dogSize, prompt: "Select the size of the dog" %>
  <%= f.input :vaccines %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <%= f.input :description %>

  <div class="clearfix"></div>
  <div class="actions">
    <div class="col-xs-3 col-lg-9 col-lg-offset-3">
      <%= f.button :submit, class: "btn btn-sm btn-primary center-block" %>
    </div>
  </div>
<% end %>