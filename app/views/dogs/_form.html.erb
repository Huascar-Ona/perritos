<%= form_for dog, :html => {:multipart => true} do |f| %>
  <% if dog.errors.any? %>
    <div class="row" id="error_explanation">
      <h2><%= pluralize(dog.errors.count, "error") %> prohibited this dog from being saved:</h2>
      <ul>
        <%= dog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="clearfix"></div>
  <div class="row">
    <div class="col-lg-4">
      <%= f.label :name %>
    </div>
    <div class="col-lg-8">
      <%= f.text_field :name %>  
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <%= f.label :contact_id %>
    </div>
    <div class="col-lg-8">
      <%= f.hidden_field :contact_id, {value: current_user.uid} %>
      <%= link_to current_user.name, 'http://www.facebook.com/'+ current_user.uid %>
      <!--%= f.text_field :display_name, {value: current_user.name, disabled: true} %-->  
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <%= f.label :tag %>
    </div>
    <div class="col-lg-8">
      <%= f.collection_select :tag_id, Tag.all,:id,:name, {selected: @selectedTag}%>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <%= f.label :image %>
    </div>
    <div class="col-lg-8">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


