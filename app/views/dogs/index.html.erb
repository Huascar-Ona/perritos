<p id="notice"><%= notice %></p>

<h1>My Dogs</h1>
<div class="container-fluid">
  <div class="col-lg-12">
    <%= link_to  new_dog_path, class: "btn btn-default", title: "Add new dog" do %>
      <i class="glyphicon glyphicon-plus"></i>
    <% end %>
  </div>
  <div class="col-lg-12">
    <% @dogs.each do |dog| %>
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= link_to dog.name, dog, class: "btn btn-lg btn-link btn-block" %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
            <% dog.photos.each do |photoDog| %>
              <% if photoDog.id == dog.avatar_id %>
                <%= image_tag photoDog.image.url(:thumb), alt: dog.name, class: 'img-responsive center-block' %>
              <% end %>
            <% end %>
          </div>
          <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <div class="btn-group-vertical">
            <%= link_to  dog, class: "btn btn-default", title: "See dog" do %>
              <i class="glyphicon glyphicon-eye-open"></i>
            <% end %>
            <%= link_to  edit_dog_path(dog), class: "btn btn-default", title: "Edit the dog" do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
            <%= link_to  dog, method: :delete, data: { confirm: 'Do you want to delete ' + dog.name }, class: "btn btn-default", title: "Erase dog" do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
            </div>
          </div>
        </div>
        <div class="clearfix"></div>    
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <% dog.tags.each do |tag| %>
            <center>
              <%= content_tag :span, tag.name, class: "label label-default"  %>
            </center>            
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
</div>
<br/>