<div class="col-xs-12 col-lg-12">
  <p id="notice" class="alert-success text-center">
    <%= notice %>
  </p>
</div>
<div class="clearfix"></div>
<div class="modal-dialog">
<div class="modal-content">
  <div class="modal-header">
    <div class="close">
      <% @dog.tags.each do |tag| %>
        <%= content_tag :span, tag.name, class: "label label-danger"  %>
      <% end %>
    </div>
    <h4 class="modal-title">
      <%= @dog.name %>
    </h4>
  </div>
  <div class="modal-body">
    <div>
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5">
      <% @dog.photos.each do |photoDog| %>
        <% if photoDog.id == @dog.avatar_id %>
          <%= image_tag photoDog.image.url(:medium), alt: @dog.name, class: 'img-responsive center-block img-circle' %>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-7">
      <div class="col-xs-12 col-sm-12 col-lg-4">
        Name
      </div>
      <div class="col-xs-12 col-sm-12 col-lg-8">
      <%= @dog.name %>
      </div>
      <div class="clearfix"></div>
      <div class="col-xs-12 col-sm-12 col-lg-4">
        Contact
      </div>
      <div class="col-xs-12 col-sm-12 col-lg-8">
        <%= link_to current_user.name, 'http://www.facebook.com/'+ current_user.uid %>
      </div>
      <div class="clearfix"></div>
      <div class="col-xs-12 col-sm-12 col-lg-4">
        Description
      </div>
      <div class="col-xs-12 col-sm-12 col-lg-8">
        <%= @dog.description %>
      </div>
      <div class="clearfix"></div>
      <div class="col-xs-12 col-sm-12 col-lg-4">
        Status
      </div>
      <div class="col-xs-12 col-sm-12 col-lg-8">
        <% @dog.tags.each do |tag| %>
          <%= tag.name %>
        <% end %>
      </div>
      <div class="clearfix"></div>
      <div class="col-xs-12 col-sm-12 col-lg-12">
        <div class="btn-group">
          <%= link_to   dogs_path, class: "btn btn-default", title: "Back" do %>
            <i class="glyphicon glyphicon-arrow-left"></i>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
</div>
<div class="clearfix"></div>
<div class="col-xs-12 col-lg-12">
  <% @dog.photos.each do |photoDog| %>
    <% if photoDog.id != @dog.avatar_id && photoDog.image.exists?(:thumb) %>
      <div class="col-xs-6 col-lg-3">
        <%= link_to photoDog.image.url(:original) do %>
          <%= image_tag photoDog.image.url(:thumb), class: 'img-responsive center-block img-thumbail' %>  
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>