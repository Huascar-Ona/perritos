<p id="notice"><%= notice %></p>
<div class="col-lg-12">
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-12">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 col-lg-offset-1">
        <% @dog.photos.each do |photoDog| %>
          <% if photoDog.id == @dog.avatar_id %>
            <%= image_tag photoDog.image.url(:medium), alt: @dog.name, class: 'img-responsive center-block' %>
          <% end %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
        <div class="col-xs-12 col-sm-12 col-lg-7">
          Name
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-5">
        <%= @dog.name %>
        </div>
        <div class="clearfix"></div>
        <div class="col-xs-12 col-sm-12 col-lg-7">
          Contact
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-5">
          <%= link_to current_user.name, 'http://www.facebook.com/'+ current_user.uid %>
        </div>
        <div class="clearfix"></div>
        <div class="col-xs-12 col-sm-12 col-lg-7">
          Status
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-5">
          <% @dog.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </div>
        <div class="clearfix"></div>
        <div class="col-xs-12 col-sm-12 col-lg-12">
          <div class="btn-group-vertical">
            <%= link_to   dogs_path, class: "btn btn-default", title: "Back" do %>
              <i class="glyphicon glyphicon-arrow-left"></i>
            <% end %>
          </div>
        </div>
    </div>
    <div class="clearfix"></div>    
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
        <% @dog.photos.each do |galeryDog| %>
          <% if galeryDog.id != @dog.avatar_id %>
            <%= image_tag galeryDog.image.url(:thumb), alt: @dog.name, class: 'img-responsive center-block' %>
          <% end %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
